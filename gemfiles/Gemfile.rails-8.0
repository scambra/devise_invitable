source 'https://rubygems.org'
git_source(:github) { |repo| "https://github.com/#{repo}.git" }

gemspec path: '..'

group :test do
  gem "activerecord-jdbcsqlite3-adapter", platforms: [:jruby]

  platforms :ruby do
    gem 'sqlite3', '>= 2.1'
  end

  gem 'actionmailer', '~> 8.0.0'
  gem 'activerecord', '~> 8.0.0'
  gem 'capybara'
  gem 'devise', '~> 4.8'
  gem 'mocha'
  gem 'mongoid'
  gem 'nokogiri'
  gem 'rspec-rails'
  gem 'shoulda'
end
