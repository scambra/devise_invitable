source 'https://rubygems.org'

gemspec path: '..'

group :test do
  platforms :jruby do
    gem 'activerecord-jdbcsqlite3-adapter', '~> 52.1'
  end

  platforms :ruby do
    gem 'sqlite3', '~> 1.3.6'
  end

  gem 'devise', '~> 4.6'
  gem 'test_after_commit' # needed for devise >= 4.1 and rails < 5
  gem 'activerecord', '~> 4.2.11'
  gem 'actionmailer', '~> 4.2.11'
  # gem "mongoid", github: 'mongoid/mongoid', branch: 'master'
  gem 'mongoid'
  gem "capybara"
  gem 'mocha'
  gem 'factory_bot_rails'
  gem 'nokogiri'
  gem 'rspec-rails'
end
